<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>, <%= dose.description %></li>
    <% end %>
  </ul>

  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %> |
  <%= link_to "Back to cocktail list", cocktails_path %>
</div>
